<h1 align="center">All Alpha Bloggers</h1>

<div class="d-flex justify-content-center">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>

<div class="row" style="margin: 5px;">
<% @users.each do |user| %>

  <div class="card" style="width: 18rem; margin: 5px;">
    <%= link_to gravatar_for(user), user_path(user) %>
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to user.username, user_path(user) %>
      </h5>
      <p class="card-text"><%= user.email %></p>
    </div>
    <div class="card-body">
      <a href="#" class="card-link"><small><%= pluralize(user.articles.count, "articles") if user.articles %></small></a>
    </div>
    <% if logged_in? and current_user.admin? %>
      <%= link_to 'Delete User', user_path(user), method: :delete, class: 'btn btn-sm btn-danger' %>
    <% end %>
  </div>


<% end %>
</div>

<div class="d-flex justify-content-center">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>